
<div class="popular_goods">
    <div class="slider_container">

        <a class="slider__control slider__control_left" href="#" role="button"></a>

        <div class="slider">
            <h2 class="slider_title">Популярные товары</h2>
            <div class="slider__wrapper">

                {% if popularGoods %}
                    {% for good in popularGoods %}

                        <div class="slider__item">
                            <div class="catalog_item_wrp" id="id_{{ good.id }}">
                                <a class="catalog_item_link" href="index.php?path=good/{{ good.id }}">
                                    <img class="catalog_item_img" src="../assets/img/catalog/{{ good.img }}" alt="catalog-img">
                                    <p class="catalog_item_title">{{ good.category }}&nbsp;{{ good.brand }}&nbsp;{{ good.model }}</p>
                                </a>
                                <div class="catalog_item_buy">
                                    <p class="catalog_item_price">{{ good.price }} руб.</p>
                                </div>
                            </div> 
                        </div>
                        
                    {% endfor %}
                {% endif %} 

            </div>  
        </div>
                    
        <a class="slider__control slider__control_right slider__control_show" href="#" role="button"></a>

    </div>
</div>
<script src="../assets/js/slider.js"></script>
